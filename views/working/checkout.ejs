<%- include('../includes/head.ejs') %>
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-12">
                <div class="card">
                    <h3 class="card-title">Thông tin làm việc</h3>
                    <h5>            
                        <%if (user.isWorking) {%>
                            <span>Đang làm việc </span>
                        <%}else{%>
                            <span>Đang Offine </span>
                        <%}%>
                    </h5> 
                    <h5>Giờ bắt đầu làm việc : <%= timeRecord.timeStart%></h5>
                    <form action="/working/post-checkout" method="POST">
                        <div class="form-group">
                            <label for="name">Tên</label>
                            <input type="text" class="form-control" id="name" value="<%= user.name%>" readonly>
                        </div>
                        <div class="form-group">
                            <label for="location">Địa điểm làm việc</label>
                            <input class="form-control" id="location" value="<%= timeRecord.location%>" readonly>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Kết thúc" class="btn btn-danger">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
<%- include('../includes/footer.ejs') %>