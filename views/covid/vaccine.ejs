<%- include('../includes/head.ejs') %>
   <div class="container">
        <div class="row">
            <div class="col-12 col-lg-12">
                <div class="card">
                    <h3 class="card-title">Đăng ký thông tin vaccine</h3>
                    <form action="/covid/post-vaccine" method="POST">
                        <div class="form-group">
                           <label for="name">Tên nhân viên</label>
                           <input type="text" class="form-control" id="name" name="name" value="<%=user.name%>" readonly>
                        </div>
                        <div class="form-group">
                           <label for="id">Mã nhân viên</label>
                           <input type="text" class="form-control" id="id" name="id" value="<%=user._id%>" readonly>
                        </div>
                        <div class="form-group">
                           <label for="doB">Ngày sinh</label>
                           <input type="text" class="form-control" id="doB" name="doB" value="<%=user.doB%>" readonly>
                        </div>
                        <div class="form-group">
                           <label for="department">Phòng ban</label>
                           <input type="text" class="form-control" id="department" name="department" value="<%=user.department%>" readonly>
                        </div>
                           <div class="form-group">
                           <label for="times">Mũi thứ</label>
                           <input type="text" class="form-control" id="times" name="times">
                        </div>
                        </div>
                           <div class="form-group">
                           <label for="vaccine">Loại vaccine</label>
                           <input type="text" class="form-control" id="vaccine" name="vaccine">
                        </div>
                           <div class="form-group">
                           <label for="date">Ngày tiêm</label>
                           <input type="date" class="form-control" id="date" name="date">
                        </div>
                        <div class="form-group">
                           <input type="submit" value="Xác nhận" class="btn btn-primary">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
<%- include('../includes/footer.ejs') %>