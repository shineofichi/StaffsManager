<%- include('../includes/head.ejs') %>
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-12">
                <div class="card">
                    <h3 class="card-title">Đăng ký nghỉ phép</h3>
                    <form action="/working/post-annualleave" method="POST">
                        <div class="form-group">
                            <label for="date">Ngày: </label>
                            <input type="date" class="form-control" id="date">
                        </div>
                        <div class="form-group">
                            <label for="hours">Số giờ nghỉ: </label>
                            <input type="number" class="form-control" id="hours" step="0.5" max="8">
                        </div>
                        <div class="form-group">
                            <label for="reason">Lý do: </label>
                            <textarea class="form-control" id="reason"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Đăng ký" class="btn btn-success">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
<%- include('../includes/footer.ejs') %>